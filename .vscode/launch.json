{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NPS Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/nps/nps.go",
            "args": ["service"],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug NPS Client", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/npc/npc.go",
            "args": ["-server=127.0.0.1:8024", "-vkey=123"],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            }
        },
        {
            "name": "Attach to Process",
            "type": "go", 
            "request": "attach",
            "mode": "local",
            "processId": 0,
            "showLog": true
        }
    ]
}